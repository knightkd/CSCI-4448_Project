<p id="notice"><%= notice %></p>

<h1>Listing Contact Informations</h1>

<table>
  <thead>
    <tr>
      <th>Phone</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_informations.each do |contact_information| %>
      <tr>
        <td><%= contact_information.phone %></td>
        <td><%= contact_information.first_name %></td>
        <td><%= contact_information.last_name %></td>
        <td><%= contact_information.email %></td>
        <td><%= contact_information.organization %></td>
        <td><%= link_to 'Show', contact_information %></td>
        <td><%= link_to 'Edit', edit_contact_information_path(contact_information) %></td>
        <td><%= link_to 'Destroy', contact_information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

